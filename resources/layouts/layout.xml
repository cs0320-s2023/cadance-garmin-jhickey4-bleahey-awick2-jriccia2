<layouts>

    <layout id="MainLayout">
        <label 
        id="title"
        text="@Strings.AppName"
        x="center" 
        y="10%" 
        color="Gfx.COLOR_ORANGE"
        font="Gfx.FONT_SMALL"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
        />

        <label
        id="Energy"
        text="@Strings.EnergyText"
        x="10%"
        y="40%"
        color="Gfx.COLOR_WHITE"
        font="Gfx.FONT_XTINY"
        justification="Gfx.TEXT_JUSTIFY_LEFT"
        />

        <label
        id="heartRate"
        text="@Strings.HeartRateText"
        x="10%"
        y="50%"
        color="Gfx.COLOR_WHITE"
        font="Gfx.FONT_XTINY"
        justification="Gfx.TEXT_JUSTIFY_LEFT"
        />

        <label
        id="cadence"
        text="@Strings.CadenceText"
        x="10%"
        y="60%"
        color="Gfx.COLOR_WHITE"
        font="Gfx.FONT_XTINY"
        justification="Gfx.TEXT_JUSTIFY_LEFT"
        />
        
    </layout>


